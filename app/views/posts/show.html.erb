<h2><%= @post.title %></h2>
<p><%= @post.body %></p>
<p>Submitted <%= time_ago_in_words(@post.created_at) %> Ago</p>
<% if user_signed_in? %> 
<%= link_to "Edit", edit_post_path(@post), :class => 'btn btn-outline-success' %>
<%= link_to "Delete", post_path(@post), 
                method: :delete,
                data: {confirm: 'Are you sure you want to DELETE your post?'},
                :class => 'btn btn-danger' %>
    <% end %>            

<hr>

