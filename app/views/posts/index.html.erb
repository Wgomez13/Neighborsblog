<h1>Blog Posts</h1>
<% @posts.each do |post| %>
    <div class="p-3 mb-2 bg-light text-dark border rounded">
        <h3><%= post.title %></h3>
        <p><%= post.body %></p>
        <p><%= post.created_at.strftime("%B, %d, %Y") %></p>
        <%= link_to "Read More", post_path(post), :class => 'btn btn-outline-success' %>
    </div>
<% end %>